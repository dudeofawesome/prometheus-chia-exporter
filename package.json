{
  "name": "prometheus-chia-exporter",
  "version": "0.0.1",
  "description": "Prometheus exporter for Chia stats",
  "author": {
    "name": "Louis Orleans",
    "email": "louis@orleans.io"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "NODE_ENV=development nodemon --config nodemon-debug.json",
    "start:prod": "NODE_ENV=production node dist/src/main.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "postinstall": "if [ -e dev/githooks/install.rb ]; then ./dev/githooks/install.rb; fi"
  },
  "engines": {
    "node": "^14.17.0"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/terminus": "^7.1.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "common-tags": "^1.8.0",
    "compression": "^1.7.4",
    "currency.js": "^2.0.3",
    "dotenv": "^8.0.0",
    "helmet": "^3.18.0",
    "luxon": "^1.26.0",
    "prom-client": "^13.1.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "secure-random-value": "^0.0.2",
    "source-map-support": "^0.5.19",
    "swagger-ui-express": "^4.0.6"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.15",
    "@types/common-tags": "^1.8.0",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^23.3.13",
    "@types/luxon": "^1.26.2",
    "@types/node": "^10.12.18",
    "@types/source-map-support": "^0.5.0",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-custom-rules": "file:./eslint",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3",
    "wait-on": "^5.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
