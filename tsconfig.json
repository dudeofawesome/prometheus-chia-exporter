{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "lib": ["ES2019"]
  },
  "exclude": ["node_modules"]
}
